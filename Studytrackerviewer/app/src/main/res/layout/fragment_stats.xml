<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 상단 탭 -->
    <LinearLayout
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tabDaily"
            android:text="일간"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:gravity="center"
            android:padding="12dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tabWeekly"
            android:text="주간"
            android:textColor="#999999"
            android:gravity="center"
            android:padding="12dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tabMonthly"
            android:text="월간"
            android:textColor="#999999"
            android:gravity="center"
            android:padding="12dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 요약 카드 -->
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/bg_card_light"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="집중"
                        android:textColor="#777777"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/summaryStudyTime"
                        android:text="-"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="산만"
                        android:textColor="#777777"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/summaryDistractedTime"
                        android:text="-"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFC107"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="이탈"
                        android:textColor="#777777"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/summaryAwayTime"
                        android:text="-"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#F44336"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 일간 -->
            <LinearLayout
                android:id="@+id/layoutDaily"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/dailyChart"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"/>
            </LinearLayout>

            <!-- 주간 -->
            <LinearLayout
                android:id="@+id/layoutWeekly"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/weeklyChart"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"/>
            </LinearLayout>

            <!-- 월간 -->
            <LinearLayout
                android:id="@+id/layoutMonthly"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/monthlyChart"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"/>
            </LinearLayout>

            <!-- 인사이트 -->
            <LinearLayout
                android:id="@+id/layoutInsights"
                android:orientation="vertical"
                android:background="@drawable/bg_card_light"
                android:padding="20dp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="학습 인사이트"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/insightTotalTime"
                    android:text="• 주간 총 공부 시간: 계산 중..."
                    android:textColor="#555555"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/insightAverageTime"
                    android:text="• 일 평균 공부 시간: 계산 중..."
                    android:textColor="#555555"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/insightBestDay"
                    android:text="• 최고의 공부 요일: 계산 중..."
                    android:textColor="#555555"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
